# Use exact versions to ensure consistency
save-exact=true

# Use strict peer dependencies
strict-peer-dependencies=false

# Enable workspaces
enable-pre-post-scripts=true

# Ensure node-linker is set to hoisted for better compatibility
node-linker=hoisted

# Set registry
registry=https://registry.npmjs.org/

# Increase network timeout for slower connections
network-timeout=100000

# Force ignore lockfile compatibility issues
lockfile-include-tarball-url=false
frozen-lockfile=false

# Enable auto-install-peers
auto-install-peers=true

# Enable legacy peer dependencies
legacy-peer-deps=true

# Disable engine strict
engine-strict=false 